---
const pageTitle = "About";
import BaseLayout from "../layout/baseLayout.astro";
import Social from "../components/Social.astro";
import mylogo from "../images/mylogo.png"
//TODO this side
---
<BaseLayout pageTitle={pageTitle}>
    <div>

        <img src={mylogo.src} alt= 'My Logo' class="my-Logo"/>

        <p>Diese Webseite dient dazu, meine Fähigkeiten als Full-Stack-Entwickler zu präsentieren und kontinuierlich weiterzuentwickeln.</p>
    
        <Social/>
        
    </div>
   
</BaseLayout>

<style>

    div{
        margin: 20px;
        padding: 30px;
        display: flex;
        flex-direction: column; 
        align-items: center;
    }

    p{
        font-size: 2em;
        width:900px;
    }

    img{
        border: 10px solid #000000;
    }

</style>